#!/bin/bash

mkdir -p $WORK/build

OUTDIR=$WORK/build
$SRC/perfetto/tools/gn gen "$OUTDIR" \
   --args="is_clang=true is_debug=false is_fuzzer=true use_libfuzzer=false link_fuzzer=\"-lFuzzingEngine\" is_asan=true is_hermetic_clang=false use_custom_libcxx=false extra_cflags=\"$CFLAGS\" extra_cxxflags=\"$CXXFLAGS\" extra_ldflags=\"$CXXFLAGS\" is_system_compiler=true" \
  --check

$SRC/perfetto/tools/ninja -C $WORK/build fuzzers -v
cp $WORK/build/*fuzzer $OUT
