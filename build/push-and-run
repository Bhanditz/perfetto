# push-and-run /path/to/binary_name [adb options]
# Pushes the provided binary to /data/local/tmp/binary_name then runs it.

set -e

function usage {
  echo "Usage: $0 /path/to/binary [adb options]"
  exit 1
}

if [[ "$#" -lt 1 ]]; then
  usage
fi

path=$1
shift

adb $@ push $path /data/local/tmp/$(basename $path) $@
adb $@ shell /data/local/tmp/$(basename $path) $@
